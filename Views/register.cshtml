  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="logo" href="/"><h1>epicodex</h1></a>
        </div>
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          @if(Model == true)
          {
            <form id="register" class="form-group" action="/register" method="post">
              <label>User Name: </label>
              <input class="form-control" type="text" name="name" placeholder="name" value="" required> <br>
              <label>Password: </label>
              <input id="password1" class="form-control"  type="password" name="password1" placeholder="password" value=""> <br>
              <label>Verify Password: </label>
              <input id="password2"class="form-control" type="password" name="password2" placeholder="password" value=""> <br>
              <button class="btn btn-success"type="submit" name="button">Submit</button>
            </form>
          }
          else
          {
            <form id="register" class="form-group" action="/register" method="post">
              <p>User Name Taken</p>
              <div class="form-group has-error has-feedback">
                <label class="control-label">User Name: </label>
                <input class="form-control" type="text" name="name" placeholder="name" value="" required>
              </div>
              <label>Password: </label>
              <input id="password1" class="form-control"  type="password" name="password1" placeholder="password" value=""> <br>
              <label>Verify Password: </label>
              <input id="password2"class="form-control" type="password" name="password2" placeholder="password" value=""> <br>
              <button class="btn btn-success"type="submit" name="button">Submit</button>
            </form>
          }
        </div>
      </div>
      <h4><a href="/">Home</a></h4>
    </div>
