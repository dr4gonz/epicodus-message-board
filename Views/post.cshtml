<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="/Content/CSS/style.css" type="text/css">
  <script   src="https://code.jquery.com/jquery-3.1.0.min.js"   integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s="   crossorigin="anonymous"></script>
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="/Content/JS/script.js" type="text/javascript"></script>
  <title>Message Board</title>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="logo" href="/"><h1>epicodex</h1></a>
      </div>
      <p class="text-right username">Logged in as @Model["user"].GetName()</h4>
    </div><!-- /.container-fluid -->
  </nav>
  <div class="container">

    <div class="row">
      <!-- MAIN CONTENT -->
      <div class="col-md-10 main-content">
        <!-- POST CONTENT -->
        <div class="post-content">
          <div class="page-header">
            <h2>@Model["post"].GetTitle()</h3>
            <p><a href='/profile/@Model["post"].GetUserId()'>@Model["post"].GetAuthor()</a> - @Model["post"].GetTime()</p>
          </div>
          <p>
            @Model["post"].GetMainText()
          </p>

          <p><em>Categories:
            @foreach(var category in @Model["post"].GetCategories())
            {
              <span class="category"><a href="/categories/@category.GetId()">@category.GetName()</a></span><span class="punctuation">, </span>
            }
          </em></p>

          @if(Model["post"].GetUserId() == Model["user"].GetId())
          {
            <h6><a class="show-form" id="edit">Edit</a></h6>
            <div class="comment-form" id="edit-form">
              <a class="hide-form">Hide</a>
              <form class="form-group" action='/posts/@Model["post"].GetId()' method="post">
                <input type="hidden" name="_method" value="PATCH">
                <input class="form-control" type="hidden" name="author" value='@Model["user"].GetName()'>
                <input class="form-control" type="hidden" name="title" value='@Model["post"].GetTitle()'>
                <label>Main Text:</label>
                <input class="form-control" type="text" name="main-text" value='@Model["post"].GetMainText()' required>
                <button class="btn btn-primary" type="submit" name="button">Submit</button>
              </form>
            </div>
            <h6><a href='/posts/@Model["post"].GetId()/remove'>Remove</a></h6>
          }

        </div>
        <!-- FORM FOR NEW TOP LEVEL COMMENT -->
        <a class="show-form" id="top">Reply</a>
        <div class="comment-form" id="top-form">
          <a class="hide-form">Hide</a>
          <form class="form-group" action='/posts/@Model["post"].GetId()' method="post">
            <input class="form-control" type="hidden" name="comment-author" value='@Model["user"].GetName()'>
            <label>Main Text:</label>
            <input class="form-control" type="text" name="comment-main-text" value="">
            <input type="hidden" name="post-id" value='@Model["post"].GetId()'>
            <button type="submit" name="button" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <!-- END FORM FOR NEW TOP LEVEL COMMENT -->
        <!-- END POST CONTENT -->


        @foreach(var comment in Model["post"].GetAllDirectChildren())
        {
          <!-- WRAPPER AROUND COMMENT + ITS CHILDREN -->
          <div class="comment-wrapper">
            <!-- CONTENT OF COMMENT -->
            <div class="comment-content">
              <div class="page-header">
                <p><a href="/profile/@comment.GetUserId()">@comment.GetAuthor()</a> - @comment.GetTime()</p>
                <form action="/posts/@comment.GetPostId()/vote" method="post">
                  <input type="hidden" name="_method" value="PATCH">
                  <input type="hidden" name="vote" value="1">
                  <input type="hidden" name="comment-id" value='@comment.GetId()'>
                  <button type="submit" name="upvote" class="votebtn upvote">+</button>
                </form>
                <form action="/posts/@comment.GetPostId()/vote" method="post">
                  <input type="hidden" name="_method" value="PATCH">
                  <input type="hidden" name="vote" value="-1">
                  <input type="hidden" name="comment-id" value='@comment.GetId()'>
                  <button type="submit" name="downvote" class="votebtn downvote">-</button>
                </form>
                <p>@comment.GetRating() | @comment.GetAuthor() - @comment.GetTime()</p>
              </div>
              <p>
                @comment.GetMainText()
              </p>
              @if(comment.GetUserId() == Model["user"].GetId())
              {
                <h6><a class="show-form" id="comment-edit">Edit</a></h6>
                <div class="comment-form" id="comment-edit-form">
                  <a class="hide-form">Hide</a>
                  <form class="form-group" action='/posts/@Model["post"].GetId()/@comment.GetId()' method="post">
                    <input type="hidden" name="_method" value="PATCH">
                    <label>Main Text:</label>
                    <input class="form-control" type="text" name="comment-main-text" value='@comment.GetMainText()' required>
                    <input type="hidden" name="comment-id" value="@comment.GetId()">
                    <button class="btn btn-primary" type="submit" name="button">Submit</button>
                  </form>
                </div>
                <h6><a href='/posts/@Model["post"].GetId()/@comment.GetId()/remove-comment'>Remove</a></h6>
              }
            </div>
            <!-- END CONTENT OF COMMENT -->

            <!-- FORM FOR REPLYING TO TOP LEVEL COMMENT -->
            <a class="show-form" id="child-@comment.GetId()">Reply</a>
            <div class="comment-form" id="child-@comment.GetId()-form">
              <a class="hide-form">Hide</a>
              <form action='/posts/@Model["post"].GetId()/reply' method="post">
                <input class="form-control" type="hidden" name="reply-author" value='@Model["user"].GetName()'>
                <label>Main Text:</label>
                <input class="form-control" type="text" name="reply-main-text" value="">
                <input type="hidden" name="parent-id" value="@comment.GetId()">
                <input type="hidden" name="post-id" value='@Model["post"].GetId()'>
                <button type="submit" name="button" class="btn btn-primary">Submit</button>
              </form>
            </div>
            <!-- END FORM FOR REPLYING TO TOP LEVEL COMMENT -->

            <!-- ALL COMMENT CHILDREN -->
            <div class="comment-children">
              @foreach(var childComment in comment.GetChildren())
              {
                <!-- WRAPPER AROUND INDIVIDUAL CHILD COMMENT -->
                <div class="comment-wrapper">
                  <div class="comment-content">
                    <div class="page-header">
                      <p><a href="/profile/@childComment.GetUserId()">@childComment.GetAuthor()</a> - @childComment.GetTime()</p>
                      <form action="/posts/@childComment.GetPostId()/vote" method="post">
                        <input type="hidden" name="_method" value="PATCH">
                        <input type="hidden" name="vote" value="1">
                        <input type="hidden" name="comment-id" value='@childComment.GetId()'>
                        <button type="submit" name="upvote" class="votebtn upvote">+</button>
                      </form>
                      <form action="/posts/@childComment.GetPostId()/vote" method="post">
                        <input type="hidden" name="_method" value="PATCH">
                        <input type="hidden" name="vote" value="-1">
                        <input type="hidden" name="comment-id" value='@childComment.GetId()'>
                        <button type="submit" name="downvote" class="votebtn downvote">-</button>
                      </form>
                      <p>@childComment.GetRating() | @childComment.GetAuthor() - @childComment.GetTime()</p>
                    </div>
                    <p>
                      @childComment.GetMainText()
                    </p>
                    @if(childComment.GetUserId() == Model["user"].GetId())
                    {
                      <h6><a class="show-form" id="comment-edit">Edit</a></h6>
                      <div class="comment-form" id="comment-edit-form">
                        <a class="hide-form">Hide</a>
                        <form class="form-group" action='/posts/@Model["post"].GetId()/@childComment.GetId()' method="post">
                          <input type="hidden" name="_method" value="PATCH">
                          <label>Main Text:</label>
                          <input class="form-control" type="text" name="comment-main-text" value='@childComment.GetMainText()' required>
                          <input type="hidden" name="comment-id" value="@childComment.GetId()">
                          <button class="btn btn-primary" type="submit" name="button">Submit</button>
                        </form>
                      </div>
                      <h6><a href='/posts/@Model["post"].GetId()/@childComment.GetId()/remove-comment'>Remove</a></h6>
                    }
                  </div>
                  <a class="show-form" id="grandchild-@childComment.GetId()">Reply</a>
                  <div class="comment-form" id="grandchild-@childComment.GetId()-form">
                    <a class="hide-form">Hide</a>
                    <form action='/posts/@Model["post"].GetId()/reply' method="post">
                      <input class="form-control" type="hidden" name="reply-author" value='@Model["user"].GetName()'>
                      <label>Main Text:</label>
                      <input class="form-control" type="text" name="reply-main-text" value="">
                      <input type="hidden" name="parent-id" value="@childComment.GetId()">
                      <input type="hidden" name="post-id" value='@Model["post"].GetId()'>
                      <button type="submit" name="button" class="btn btn-primary">Submit</button>
                    </form>
                  </div>

                  <!-- CHILDREN OF CHILD COMMENT -->
                  <div class="grandchildren">
                    @foreach(var grandchildComment in childComment.GetChildren())
                    {
                      <div class="comment-wrapper">
                        <div class="comment-content">
                          <div class="page-header">
                            <p><a href="/profile/@grandchildComment.GetUserId()">@grandchildComment.GetAuthor()</a> - @grandchildComment.GetTime()</p>
                            <form action="/posts/@grandchildComment.GetPostId()/vote" method="post">
                              <input type="hidden" name="_method" value="PATCH">
                              <input type="hidden" name="vote" value="1">
                              <input type="hidden" name="comment-id" value='@grandchildComment.GetId()'>
                              <button type="submit" name="upvote" class="votebtn upvote">+</button>
                            </form>
                            <form action="/posts/@grandchildComment.GetPostId()/vote" method="post">
                              <input type="hidden" name="_method" value="PATCH">
                              <input type="hidden" name="vote" value="-1">
                              <input type="hidden" name="comment-id" value='@grandchildComment.GetId()'>
                              <button type="submit" name="downvote" class="votebtn downvote">-</button>
                            </form>
                            <p>@grandchildComment.GetRating() | @grandchildComment.GetAuthor() - @grandchildComment.GetTime()</p>
                          </div>
                          <p>
                            @grandchildComment.GetMainText()
                          </p>
                          @if(grandchildComment.GetUserId() == Model["user"].GetId())
                          {
                            <h6><a class="show-form" id="comment-edit">Edit</a></h6>
                            <div class="comment-form" id="comment-edit-form">
                              <a class="hide-form">Hide</a>
                              <form class="form-group" action='/posts/@Model["post"].GetId()/@grandchildComment.GetId()' method="post">
                                <input type="hidden" name="_method" value="PATCH">
                                <label>Main Text:</label>
                                <input class="form-control" type="text" name="comment-main-text" value='@grandchildComment.GetMainText()' required>
                                <input type="hidden" name="comment-id" value="@grandchildComment.GetId()">
                                <button class="btn btn-primary" type="submit" name="button">Submit</button>
                              </form>
                            </div>
                            <h6><a href='/posts/@Model["post"].GetId()/@grandchildComment.GetId()/remove-comment'>Remove</a></h6>
                          }
                          @{int numberOfChildren = grandchildComment.GetChildren().Count;}
                          @if(numberOfChildren > 0)
                          {
                            <a href="/comments/@grandchildComment.GetId()">View @numberOfChildren comments</a>
                          }
                          else
                          {
                            <a href="/comments/@grandchildComment.GetId()">Reply</a>
                          }
                        </div>
                      </div>
                    }
                  </div>
                </div>


              }
            </div>
          </div>

        }
      </div>
      <div class="col-md-2">
        <div class="sidebar">
          <h3>SIDEBAR</h3>
          <ul>
            <li class="sidebar-listitem"><a href="/new"><button type="button" class="btn btn-success">New Post</button></a></li>
            <li class="sidebar-listitem"><a href="/new_category"><button type="button" class="btn btn-success">New Category</button></a></li>
            <li class="sidebar-listitem">
              <form action="/" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger" type="submit">Delete all Posts</button>
              </form>
            </li>
            <li class="sidebar-listitem">
              <form action="/categories" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger" type="submit">Delete all Categories</button>
              </form>
            </li>
            </li class="sidebar-listitem">
            <li><a href="/register"><button type="button" class="btn btn-info">Register</button></a></li>
          </ul>

          <h5>Search Posts</h5>
          <form class="form-group" action="/posts/search" method="post">
            <input class="form-control" name="keyword" type="text">
            <button class="btn btn-primary" type="submit" name="button">Search</button>
          </form>
          <h5>Search Categories</h5>
          <form class="form-group" action="/categories/search" method="post">
            <input class="form-control" name="keyword" type="text">
            <button class="btn btn-primary" type="submit" name="button">Search</button>
          </form>

        </div>
      </div>
    </div>
    <h4><a href="/">Home</a></h4>
  </div>
</div>
<footer>
  <p>&copy; 2016 Message Board</p>
</footer>
</body>
</html>
