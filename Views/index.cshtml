<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/Content/CSS/style.css" type="text/css">
    <script   src="https://code.jquery.com/jquery-3.1.0.min.js"   integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s="   crossorigin="anonymous"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="/Content/JS/script.js" type="text/javascript"></script>
    <title>Message Board</title>
  </head>
  <body>
    <div class="container">
      <div class="col-md-12">
        @if(Model.Count == 0)
        {
          <h2>No Posts</h2>
        }
        else
        {
          <ul class="list-group">
            @foreach(var post in Model)
            {
              <button id="upvote" type="button" name="upvote">+</button>
              <button id="downvote" type="button" name="downvote">-</button>
              <li class="list-group-item"><a href="/posts/@post.GetId()">@post.GetRating() - @post.GetTitle()</a></li>
            }
          </ul>
        }

        <form class="form-group" action="/" method="post">
          <label>Author:</label>
          <input class="form-control" type="text" name="author" value="" required>
          <label>Title:</label>
          <input class="form-control" type="text" name="title" value="" required>
          <label>Main Text:</label>
          <input class="form-control" type="text" name="main-text" value="" required>
          <button class="btn btn-primary" type="submit" name="button">Submit</button>
        </form>
        <form action="/" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn btn-danger" type="submit" name="button">Delete all Posts</button>
        </form>
        <a href="/register">Register</a>
      </div>
    </div>
  </body>
</html>
