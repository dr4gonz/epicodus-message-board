<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    @if(Model.Count == 0)
    {
      <h2>No Posts</h2>
    }
    else
    {
      <ul>
        @foreach(var post in Model)
        {
          <li><a href="/posts/@post.GetId()">@post.GetTitle()</a></li>
        }
      </ul>
    }

    <form action="/" method="post">
      <label>Author:</label>
      <input type="text" name="author" value="">
      <label>Title:</label>
      <input type="text" name="title" value="">
      <label>Main Text:</label>
      <input type="text" name="main-text" value="">
      <button type="submit" name="button">Submit</button>
    </form>
  </body>
</html>
